<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/module-install.dtd">
<install type="module" version="1.5.0" method="upgrade">
	<name>redEVENT Events</name>
	<creationDate>Apr 16, 2010</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2008 - 2010 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>2.0 beta 9.1</version>
	<description>MOD_REDEVENT_REDEVENT_DESCRIPTION</description>

	<files>
		<filename module="mod_redevent">mod_redevent.php</filename>
		<filename>mod_redevent.css</filename>
		<filename>index.html</filename>
    <filename>helper.php</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/index.html</filename>
	</files>

	<languages>
		<language tag="en-GB">languages/en-GB.mod_redevent.ini</language>
		<language tag="de-DE">languages/de-DE.mod_redevent.ini</language>
		<language tag="nl-NL">languages/nl-NL.mod_redevent.ini</language>
		<language tag="fi-FI">languages/fi-FI.mod_redevent.ini</language>
		<language tag="sv-SE">languages/sv-SE.mod_redevent.ini</language>
	</languages>

	<params>
		<param name="count" type="text" default="5" label="EVENTS IN MODULE" description="EVENTS IN MODULE DESC" />
		<param name="type" type="list" default="0" label="MOD_REDEVENT_REDEVENT_EVENT_STATE" description="MOD_REDEVENT_REDEVENT_EVENT_STATE_DESC">
			<option value="0">MOD_REDEVENT_REDEVENT_EVENT_STATE_PUBLISHED</option>
			<option value="1">MOD_REDEVENT_REDEVENT_EVENT_STATE_UPCOMING</option>
			<option value="2">MOD_REDEVENT_REDEVENT_EVENT_STATE_ARCHIVED</option>
			<option value="3">MOD_REDEVENT_REDEVENT_EVENT_STATE_OPENDATE</option>
			<option value="4">MOD_REDEVENT_REDEVENT_EVENT_STATE_JUSTPASSED</option>
		</param>
		<param name="dayoffset" type="text" default="0" label="MOD_REDEVENT_REDEVENT_DATE_OFFSET" description="MOD_REDEVENT_REDEVENT_DATE_OFFSET_DESC"/>
		<param name="featuredonly" type="list" default="0" label="MOD_REDEVENT_REDEVENT_SHOW_FEATURED_ONLY" description="MOD_REDEVENT_REDEVENT_SHOW_FEATURED_ONLY_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="showsessions" type="list" default="1" label="MOD_REDEVENT_REDEVENT_SHOW_SESSIONS" description="MOD_REDEVENT_REDEVENT_SHOW_SESSIONS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="showrecurring" type="list" default="1" label="MOD_REDEVENT_REDEVENT_SHOW_RECURRING" description="MOD_REDEVENT_REDEVENT_SHOW_RECURRING_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="showvenue" type="list" default="1" label="MOD_REDEVENT_SHOW_VENUE" description="MOD_REDEVENT_SHOW_VENUE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="cuttitle" type="text" default="18" label="MAX TITLE LENGTH" description="MAX TITLE LENGTH DESC" />
		<param name="linkloc" type="radio" default="1" label="LINK TO VENUE" description="LINK TO VENUE DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="linkdet" type="list" default="1" label="LINK TO DETAILS" description="LINK TO DETAILS DESC">
			<option value="0">NO</option>
			<option value="1">DATE</option>
			<option value="2">TITLE</option>
		</param>
    <param name="show_enddate" type="list" default="1" label="SHOW END DATE" description="SHOW END DATE DESC">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </param>
    <param name="show_time" type="list" default="1" label="SHOW TIME" description="SHOW TIME DESC">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </param>
    <param name="show_picture" type="list" default="1" label="MOD_REDEVENT_SHOW_PICTURE" description="MOD_REDEVENT_SHOW_PICTURE_DESC">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </param>
		<param name="picture_size" type="text" default="30" label="MOD_REDEVENT_PICTURE_SIZE" description="MOD_REDEVENT_PICTURE_SIZE_DESC" />
		<param name="catid" type="text" default="" label="CATEGORY ID" description="CATEGORY ID DESC" />
		<param name="venid" type="text" default="" label="VENUE ID" description="VENUE ID DESC" />
		<param name="formatdate" type="text" default="%d.%m.%Y" label="DATE FORMAT" description="DATE FORMAT DESC" />
		<param name="formattime" type="text" default="%H.%M" label="TIME FORMAT" description="TIME FORMAT DESC" />
		<param name="moduleclass_sfx" type="text" default="" label="MODULE CLASS SUFFIX" description="MODULE CLASS SUFFIX DESC" />
	</params>

	<params group="advanced">
		<param name="cache" type="list" default="1" label="CACHING" description="CACHING DESC">
			<option value="1">USE GLOBAL</option>
			<option value="0">NO CACHING</option>
		</param>
		<param name="cache_time" type="text" default="900" label="CACHE TIME" description="CACHE TIME DESC" />
	</params>

</install>