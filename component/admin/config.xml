<?xml version="1.0" encoding="utf-8"?>
<config>
	<params addpath="/administrator/components/com_redevent/elements">
		<param name="display_num" type="list" default="15" label="EVENT NUMBER" description="EVENT NUMBER TIP">
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="50">50</option>
		</param>
		<param name="cat_num" type="text" size="2" default="4" label="CAT DISPLAY" description="CAT DISPLAY DESC" />
  		<param name="filter" type="radio" default="1" label="FILTER" description="FILTER DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="display" type="radio" default="1" label="DISPLAY SELECT" description="DISPLAY SELECT DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="icons" type="radio" default="1" label="SHOW ICONS" description="SHOW ICONS DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_print_icon" type="radio" default="1" label="PRINT ICON" description="PRINT ICON DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_email_icon" type="radio" default="1" label="EMAIL ICON" description="EMAIL ICON DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
    <param name="show_gotoarchive_icon" type="radio" default="1" label="GO TO ARCHIVE ICON" description="GO TO ARCHIVE ICON DESC">
      <option value="0">Hide</option>
      <option value="1">Show</option>
    </param>
    <param name="week_start" type="radio" default="MO" label="WEEK START" description="WEEK START DESC">
      <option value="SU">SUNDAY</option>
      <option value="MO">MONDAY</option>
    </param>
    <param name="recurrence_limit" type="text" default="30" label="RECURRENCE ANTICIPATION WINDOW" description="RECURRENCE ANTICIPATION WINDOW DESC" />
		<param name="default_content" type="event" default="0" label="SELECT EVENT DEFAULT CONTENT" description="SELECT EVENT DEFAULT CONTENT DESC" />
 	</params>
 	<params group="Layout">
    <param name="details_attendees_layout" type="list" default="0" label="DETAILS ATTENDEES LAYOUT" description="DETAILS ATTENDEES LAYOUT TIP">
      <option value="0">Table</option>
      <option value="1">List</option>
    </param> 	  
    <param name="display_placesleft" type="radio" default="0" label="DISPLAY PLACES LEFT" description="DISPLAY PLACES LEFT DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="custom_css" type="text" default="" size="60" label="CUSTOM CSS PATH" description="CUSTOM CSS PATH DESC"/>
 	</params>
 	<params group="pasteventssettings">
    <param name="pastevents_action" type="list" default="0" label="PAST EVENTS ACTION" description="PAST EVENTS ACTION TIP">
      <option value="0">DO NOTHING</option>
      <option value="1">DELETE OLD EVENTS</option>
      <option value="2">ARCHIVE OLD EVENTS</option>
    </param>
    <param name="pastevents_delay" type="text" default="2" label="PAST EVENTS DELAY" description="PAST EVENTS DELAY TIP" />
    <param name="pastevents_reference_date" type="list" default="end" label="PAST EVENTS REFERENCE DATE" description="PAST EVENTS REFERENCE DATE TIP">
      <option value="end">END DATE</option>
      <option value="start">START DATE</option>
      <option value="registration">REGISTRATION DATE</option>
    </param>
 	</params>
</config>