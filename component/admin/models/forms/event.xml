<?xml version="1.0" encoding="UTF-8"?>
<form>
	
	<field
		name="id"
		type="text"
		default="0"
		label="JGLOBAL_FIELD_ID_LABEL"
		description ="JGLOBAL_FIELD_ID_DESC"
		class="readonly"
		readonly="true"	/>
	
	<field
		name="title"
		type="text"
		default=""
		label="COM_REDEVENT_EVENT_TITLE"
		description ="COM_REDEVENT_EVENT_TITLE" 
		required="true" 
		class="inputbox" />
	
	<field
		name="alias"
		type="text"
		default=""
		label="COM_REDEVENT_Alias"
		description ="COM_REDEVENT_Alias"
		class="inputbox" />
	
	<field
		name="course_code"
		type="text"
		default=""
		label="COM_REDEVENT_COURSE_CODE"
		description ="COM_REDEVENT_COURSE_CODE" 
		class="inputbox" />
	
	<field
		name="published"
		type="list"
		class="inputbox"
		default="1"
		size="1"
		label="JSTATUS"
		description="JFIELD_PUBLISHED_DESC">
		<option
			value="1">
			JPUBLISHED</option>
		<option
			value="0">
			JUNPUBLISHED</option>
		<option
			value="-1">
			JARCHIVED</option>
	</field>
	
	<field
		name="created_by"
		type="user"
		label="JGLOBAL_FIELD_CREATED_BY_LABEL"
		desc="JGLOBAL_FIELD_CREATED_BY_DESC"
		class="inputbox"
		/>
	
	<field
		name="layout"
		type="list"
		class="inputbox"
		default="0"
		size="1"
		label="COM_REDEVENT_EVENT_LAYOUT"
		description="COM_REDEVENT_EVENT_LAYOUT_TIP">
		<option	value="0">COM_REDEVENT_DEFAULT</option>
		<option	value="1">COM_REDEVENT_EVENT_LAYOUT_TAGS</option>
		<option	value="2">COM_REDEVENT_EVENT_LAYOUT_FIXED</option>
	</field>
		
	<field
		name="datdescription"
		type="editor"
		label="COM_REDEVENT_EVENT_DESCRIPTION"
		description="COM_REDEVENT_EVENT_DESCRIPTION"
		class="inputbox"
		filter="safehtml"
		buttons="true"
		hide="readmore,pagebreak"/>
		
	<field
		name="summary"
		type="editor"
		label="COM_REDEVENT_EVENT_SUMMARY"
		description="COM_REDEVENT_EVENT_SUMMARY_DESC"
		class="inputbox"
		filter="safehtml"
		buttons="false"/>
		
	<field
		name="datimage"
		type="media"
		label="COM_REDEVENT_CHOOSE_IMAGE"
		description="COM_REDEVENT_CHOOSE_IMAGE"
		class="inputbox"
		directory="redevent/events"/>
		
</form>
