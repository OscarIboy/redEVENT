<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_redevent/css/backend.less||media://com_redevent/css/backend.css"
	validate="true"
>
	<fieldset name="basic_configuration"
		label="COM_REDEVENT_TEXTSNIPPET_EDIT_SNIPPET_FIELDSET"
		description="COM_REDEVENT_TEXTSNIPPET_EDIT_SNIPPET_FIELDSET_DESC"
		class="span6"
	>
		<field name="text_name" type="text"
			class="inputbox"
			label="COM_REDEVENT_TEXT_TAG"
			labelclass="redevent-label redevent-label-main"
			required="true"
			size="50"
		 />
		<field name="text_description" type="text"
			class="inputbox"
			label="COM_REDEVENT_TEXT_DESCRIPTION"
			labelclass="redevent-label redevent-label-main"
			required="false"
			size="50"
		 />
		
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
			class="inputbox">
			<option value="*">JALL</option>
		</field>
	</fieldset>
		
	<fieldset name="content"
		label="COM_REDEVENT_TEXTLIBRARY_CONTENT_LABEL"
		description="COM_REDEVENT_TEXTLIBRARY_CONTENT_DESC"
		class="span6"
	>
		<field
			name="text_field"
			type="dynamiceditor"
			default=""
			label=""
			class="inputbox" />
			
	</fieldset>
</form>