<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_redevent/css/backend.less||media://com_redevent/css/backend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_redevent_COMMON_NORECORDS"
>
	<headerset>
		<header name="id" type="rowselect" tdwidth="20" />
		<header name="text_name" type="fieldsearchable" sortable="true"
			buttons="yes" buttonclass="btn"
		/>
		<header name="text_description" type="fieldsearchable" sortable="no"
			buttons="yes" buttonclass="btn"
		/>
		<header name="language" label="JGRID_HEADING_LANGUAGE" type="language" sortable="true" none="true"/>
	</headerset>

	<fieldset name="items">
		<field name="id" type="selectrow"/>

		<field name="text_name" type="text"
			show_link="true"
			url="index.php?option=com_redevent&amp;view=textsnippet&amp;id=[ITEM:ID]"
			class="redeventrole"
			empty_replacement="(no title)"
		 />
		
		<field name="text_description" type="text" />

		<field name="language" type="language">
			<option value="*">JALL</option>
		</field>
	</fieldset>
</form>