<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_redevent/css/backend.less||media://com_redevent/css/backend.css"
	validate="true"
>
	<fieldset name="basic_configuration"
		label="COM_REDEVENT_PRICEGROUPS_PRICEGROUP"
		description="COM_REDEVENT_PRICEGROUPS_PRICEGROUP"
		class="span6"
	>
		<field name="name" type="text"
			class="inputbox"
			label="COM_REDEVENT_Name"
			labelclass="redevent-label redevent-label-main"
			required="true"
			size="50"
		 />
		<field name="alias" type="text"
			class="inputbox"
			label="COM_REDEVENT_alias"
			labelclass="redevent-label redevent-label-main"
			required="false"
			size="50"
		 />
		
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
			class="inputbox">
			<option value="*">JALL</option>
		</field>
		
		<field
			name="tooltip"
			type="text"
			default=""
			label="COM_REDEVENT_PRICEGROUPS_TOOLTIP"
			description ="COM_REDEVENT_PRICEGROUPS_TOOLTIP_TIP"
			class="inputbox" />
			
		<field
			name="adminonly"
			type="list"
			default="0"
			label="COM_REDEVENT_PRICEGROUPS_ADMINONLY"
			description="COM_REDEVENT_PRICEGROUPS_ADMINONLY_TIP"
			class="inputbox">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
			
		<field
			name="image"
			type="media"
			label="COM_REDEVENT_CHOOSE_IMAGE"
			description="COM_REDEVENT_CHOOSE_IMAGE"
			class="inputbox"
			directory="redevent/categories"/>
			
	</fieldset>
</form>