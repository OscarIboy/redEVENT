<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_redevent/css/backend.less||media://com_redevent/css/backend.css"
>
	<fieldset name="basic_configuration"
		label="COM_REDEVENT_ROLE"
		description="COM_REDEVENT_ROLE"
		class="span6"
	>
		<field name="name" type="text"
			class="inputbox"
			label="COM_REDEVENT_Name"
			labelclass="redevent-label redevent-label-main"
			required="true"
			size="50"
		 />
		
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_REDEVENT_FIELD_LANGUAGE_DESC"
			class="inputbox">
			<option value="*">JALL</option>
		</field>
	
		<field name="usertype" type="text" 
			label="COM_REDEVENT_REDMEMBER_USERTYPE_LABEL"
			labelclass="redevent-label"
			description="COM_REDEVENT_REDMEMBER_USERTYPE_DESC" class="inputbox"
			size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		
		<field name="fields" type="text" 
			label="COM_REDEVENT_REDMEMBER_USERTYPE_FIELDS_LABEL"
			labelclass="redevent-label"
			description="COM_REDEVENT_REDMEMBER_USERTYPE_FIELDS_DESC" class="inputbox"
			size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
	<fieldset name="description_group"
		label="COM_redevent_description"
		description="COM_redevent_description"
		class="span6"
	>
		<field name="description" type="editor"
			label=""
			class="inputbox"
			required="false"
			filter="JComponentHelper::filterText" buttons="true"
		/>
	</fieldset>
</form>