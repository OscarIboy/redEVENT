<install type="xmap_ext" version="1.5.0">
        <name>redEVENT Plugin</name>
        <author>redCOMPONENT / adapted from Eventlist plugin by Guillermo Vargas</author>
        <creationDate>2011-04-29</creationDate>
        <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
				<authorEmail>email@redweb.dk</authorEmail>
				<authorUrl>www.redweb.dk</authorUrl>
				<copyright>(c) 2011 Redweb.dk</copyright>
        <version>1.0.0</version>
        <description>Plugin for redEVENT component</description>
        <files>
                <filename xmap_ext="com_redevent">com_redevent.php</filename>
        </files>
        <params>
                <param name="include_events" type="list" default="1" label="Show Events" description="Should we include events into the sitemap?">
                        <option value="0">Never</option>
                        <option value="1">Always</option>
                        <option value="2">In XML Sitemap Only</option>
                        <option value="3">In Site Sitemap Only</option>
		</param>
                <param name="max_events" type="text" default="" label="Max events" description="Max number of events per category to include on sitemap (Leave empty for no limit)" />
                <param name="max_age" type="text" default="" label="happening later than (days ago)" description="Only show events happening later than this number of days ago (Leave it blank to ignore this option)" />
                <param name="dateformat" type="text" default="%F" label="Date format" description="see php sprintf documentation for formats" />
		<param name="@spacer" type="spacer" default="" label="XML Sitemap" description="Options for the XML sitemap only" />
                <param name="cat_priority" type="list" default="-1" label="Category Priority" description="Set the priority for the categories">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="0.0">0.0</option>
                        <option value="0.1">0.1</option>
                        <option value="0.2">0.2</option>
                        <option value="0.3">0.3</option>
                        <option value="0.4">0.4</option>
                        <option value="0.5">0.5</option>
                        <option value="0.6">0.6</option>
                        <option value="0.7">0.7</option>
                        <option value="0.8">0.8</option>
                        <option value="0.9">0.9</option>
                        <option value="1">1</option>
                </param>
                <param name="cat_changefreq" type="list" default="-1" label="Category Change frequency" description="Set the chage frequency for the categories">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="always">Always</option>
                        <option value="hourly">Hourly</option>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="never">Never</option>
                </param>
                <param name="file_priority" type="list" default="-1" label="File Priority" description="Set the priority for the files">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="0.0">0.0</option>
                        <option value="0.1">0.1</option>
                        <option value="0.2">0.2</option>
                        <option value="0.3">0.3</option>
                        <option value="0.4">0.4</option>
                        <option value="0.5">0.5</option>
                        <option value="0.6">0.6</option>
                        <option value="0.7">0.7</option>
                        <option value="0.8">0.8</option>
                        <option value="0.9">0.9</option>
                        <option value="1">1</option>
                </param>
                <param name="file_changefreq" type="list" default="-1" label="File Change frequency" description="Set the chage frequency for the files">
                        <option value="-1">Use Parent Menu Settings</option>
                        <option value="always">Always</option>
                        <option value="hourly">Hourly</option>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="never">Never</option>
                </param>
        </params>
</install>
