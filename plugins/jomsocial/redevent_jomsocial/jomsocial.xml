<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC 
  "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="redevent" method="upgrade">
	<name>redEVENT - JomSocial Plugin</name>
	<creationDate>07/07/2009</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2008 - 2009 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>1.0</version>
  <description>Plugin for JomSocial and redEVENT</description>
  
  <files>
    <filename plugin="jomsocial">jomsocial.php</filename>
  </files>
    
  <languages>
    <language tag="en-GB">languages/en-GB.plg_redevent_jomsocial.ini</language>
    <language tag="sv-SE">languages/sv-SE.plg_redevent_jomsocial.ini</language>
  </languages>
  
  <params>
    <param type="spacer" default="Activity Stream" label="" name="spacer"/>
    <param type="radio" name="activity_addevent" label="ACTIVITY ADD EVENT" default="1" description="ACTIVITY ADD EVENT TIP">
	    <option value="0">No</option>
	    <option value="1">Yes</option>
    </param>
    <param type="radio" name="activity_editevent" label="ACTIVITY EDIT EVENT" default="1" description="ACTIVITY EDIT EVENT TIP">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param type="radio" name="activity_addvenue" label="ACTIVITY ADD VENUE" default="1" description="ACTIVITY ADD VENUE TIP">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param type="radio" name="activity_editvenue" label="ACTIVITY EDIT VENUE" default="1" description="ACTIVITY EDIT VENUE TIP">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param type="radio" name="activity_eventregister" label="ACTIVITY EVENT REGISTER" default="1" description="ACTIVITY EVENT REGISTER TIP">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param type="radio" name="activity_eventunregister" label="ACTIVITY EVENT UNREGISTER" default="1" description="ACTIVITY EVENT UNREGISTER TIP">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
  </params>

</install>
