	<version>3.2.3</version>
	<description>PLG_SYSTEM_REDEVENT_LABELS_XML_DESCRIPTION</description>

	<files>
		<folder>language</folder>
		<filename plugin="redevent_labels">redevent_labels.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="label_content"
					type="redevent.textsnippet"
					label="PLG_SYSTEM_REDEVENT_LABELS_XML_LABEL_CONTENT"
					description="PLG_SYSTEM_REDEVENT_LABELS_XML_LABEL_CONTENT_DESC"
